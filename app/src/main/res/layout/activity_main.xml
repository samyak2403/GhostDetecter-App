<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GhostDetectedActivity">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#EDEDED"
        app:cardCornerRadius="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/green_light"
            android:layout_height="180dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome to"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="12sp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:letterSpacing="0.02"
                        android:textSize="20sp" />



                </LinearLayout>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/apps"
                    app:tint="@color/white" />


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:id="@+id/ghostBtn"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/ghost"
                              />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ghost Detecter"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:letterSpacing="0.04"
                                android:layout_marginTop="8dp"
                                android:alpha="0.8"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:id="@+id/magneticSensorBtn"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/magnetic_sensor"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Magnetic Sensor"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:letterSpacing="0.04"
                                android:layout_marginTop="8dp"
                                android:alpha="0.8"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:id="@+id/demoBtn"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/demo"
                                 />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Demo"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:letterSpacing="0.04"
                                android:layout_marginTop="8dp"
                                android:alpha="0.8"/>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:id="@+id/aboutBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/apps" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:alpha="0.8"
                                android:letterSpacing="0.04"
                                android:text="About"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>




                <LinearLayout

                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bannerLayout"
                        android:orientation="horizontal" />



                </LinearLayout>


            </LinearLayout>







        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:background="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_height="1dp"/>

    </androidx.cardview.widget.CardView>



</LinearLayout>